{
    "version": 2,
    "buildCommand": "npm ci --prefix backend && npm ci --prefix frontend && npm run build",
    "outputDirectory": "frontend/dist",
    "functions": {
        "api/index.js": {
            "includeFiles": "backend/dist/**"
        }
    },
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/api/index.js"
        },
        {
            "handle": "filesystem"
        },
        {
            "src": "/(.*)",
            "dest": "/index.html"
        }
    ]
}